<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="255"
        tools:layout_editor_absoluteX="-196dp"
        tools:layout_editor_absoluteY="28dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <CheckBox android:id="@+id/checkbox_ex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="overlay_ex"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_he"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="overlay_he"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_ma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="overlay_ma"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_od"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="overlay_od"
        android:onClick="onCheckboxClicked"/>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
